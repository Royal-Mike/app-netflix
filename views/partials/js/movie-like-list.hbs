<script>
    $(document).ready(function () {
        $('body').on('click', '.fa-plus', function () {
            const id = $(this).attr("id");
            $.ajax({
                type: 'POST',
                url: '/home/playList',
                data: {
                   movieID: id 
                },
                success: function(result) {
                    if (result === "success") alert("Movie Added to Your List");
                    else alert("Movie Already in Your List");
                },
                error: function(result) {
                    console.log(result);
                }
            });   
        });

        $('body').on('click', '.fa-thumbs-up', function () {
            const id = $(this).attr("id");
            $.ajax({
                type: 'POST',
                url: '/home/liked',
                data: {
                   movieID: id
                },
                success: function(result) {
                    if (result === "success") alert("Movie Liked");
                    else alert("Movie Already Liked");
                },
                error: function(result) {
                    console.log(result);
                }
            });
        });
    });
</script>