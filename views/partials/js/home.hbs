<script>
    $(document).ready(function () {
        $('.movie-hoverred').each(function () {
            $(this).on('mouseover', function () {
                $('.movie-actions', this).removeClass('d-none');
                $(this).css({
                    'transform': 'scale(1.5)',
                    'transition': '0.5s',
                    'position': 'relative',
                });
            });

            $(this).on('mouseout', function () {
                $('.movie-actions', this).addClass('d-none');
                $(this).css({
                    'transform': 'scale(1)',
                    'transition': '0.5s',
                });
            });
        });

        $('.cancel-review').on('click', function() {
            $('.poster').addClass("invisible");
        });

        $('.open-movie-details').on('click', function() {
            $('.poster').removeClass("invisible");
        });

        $('.play-video').on('click', function() {
            window.location.href = '/watch';
        })
    });
</script>