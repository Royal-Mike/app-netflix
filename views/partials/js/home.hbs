<script>
    $(document).ready(function () {
        const video = $('#video')[0];

        const options = {
            root: null,
            rootMargin: '0px',
            threshold: 0.7
        };

        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    const checkAvailability = video.play();
                    $(".navbar").removeClass("bg-body-tertiary");
                    if (checkAvailability !== undefined) {
                        checkAvailability.then(() => {
                        }).catch(error => {
                            video.muted = true;
                            video.play();
                        });
                    }
                } else {
                    video.pause();
                    $(".navbar").addClass("bg-body-tertiary");
                }
            });
        }, options);

        observer.observe(video);

        $('.volumn').on('click', () => {
            if (video.muted) {
                $('.turn-on-volumn').removeClass('d-none');
                $('.turn-off-volumn').addClass('d-none');
            } else {
                $('.turn-on-volumn').addClass('d-none');
                $('.turn-off-volumn').removeClass('d-none');
            }
            $('video').prop('muted', !video.muted);
            Cookies.set("global_muted", video.muted, { expires: 365 });
        });

        $('.fa-plus').on('click',function () {
            const id = $(this).attr("id");
            console.log("on: ", id)

            $.ajax({
                type: 'POST',
                url: '/home/playList',
                data: {
                   movieID: id 
                },
                success: function(result) {
                    if (result === "success") alert("Movie Added to Your List");
                    else alert("Movie Already in Your List");
                },
                error: function(result) {
                    console.log(result);
                }
            });   
        });

        $('.fa-thumbs-up').on('click',function () {
            const id = $(this).attr("id");

            $.ajax({
                type: 'POST',
                url: '/home/liked',
                data: {
                   movieID: id
                },
                success: function(result) {
                    if (result === "success") alert("Movie Liked");
                    else alert("Movie Already Liked");
                },
                error: function(result) {
                    console.log(result);
                }
            });
        });
    });
</script>