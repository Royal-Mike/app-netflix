{{> js/admin/crud-movie}}
<div id="screen-movie" class="container border screen-info py-1">
    <div class="d-flex align-items-center justify-content-between mt-1">
        <h4 class="m-0" style="align-self:flex-start">Movies</h4>
        <a id="open-add-movie" class="btn btn-danger m-0">Add Movie</a>
    </div>
    <hr class="mt-2">
    <div id="edit-movie" class="container d-none">
        <div class="input-group mb-3">
            <span class="input-group-text" style="width:15%" id="movie-name">Tên sản phẩm</span>
            <input type="text" class="form-control" placeholder="Name" aria-label="Name" aria-describedby="movie-name">
        </div>
        <div class="input-group mb-3">
            <span class="input-group-text" style="width:15%" id="movie-create_date">Ngày sản xuất</span>
            <input type="date" class="form-control" placeholder="Creation Date" aria-label="Creation Date" aria-describedby="movie-create_date">
        </div>
        <div class="input-group mb-3">
            <span class="input-group-text" style="width:15%" id="movie-brand">Nhãn hiệu</span>
            <input type="text" class="form-control" placeholder="Brand" aria-label="Brand" aria-describedby="movie-brand">
        </div>
        <div class="input-group mb-3">
            <span class="input-group-text" style="width:15%" id="movie-color">Màu sắc</span>
            <input type="text" class="form-control" placeholder="Color" aria-label="Color" aria-describedby="movie-color">
        </div>
        <div class="input-group mb-3">
            <span class="input-group-text" style="width:15%" id="movie-images">Hình ảnh</span>
            <input type="text" class="form-control" placeholder="Images" aria-label="Images" aria-describedby="movie-images">
        </div>
        <input type='file' id='movie-upload' multiple='multiple' accept='image/*' name='upload-movieduct' />
        <div class="input-group mb-3">
            <span class="input-group-text" style="width:15%" id="movie-price">Giá tiền</span>
            <input type="number" class="form-control" placeholder="Price" aria-label="Price" aria-describedby="movie-price" style="text-align:left">
        </div>
        <div class="input-group mb-3">
            <span class="input-group-text" style="width:15%" id="movie-description">Miêu tả</span>
            <textarea type="text" class="form-control" placeholder="Description" aria-label="Description" aria-describedby="movie-description" style="height:200px"></textarea>
        </div>
        <div class="input-group mb-3">
            <span class="input-group-text" style="width:15%" id="movie-sale">Giảm giá</span>
            <input type="text" class="form-control" placeholder="Sale" aria-label="Sale" aria-describedby="movie-sale">
        </div>
        <div class="input-group mb-3">
            <span class="input-group-text" style="width:15%" id="movie-for">Dành cho</span>
            <select class="form-select">
                <option value="Nam">Nam</option>
                <option value="Nữ">Nữ</option>
            </select>
        </div>
        <div class="input-group mb-3">
            <span class="input-group-text" style="width:15%" id="movie-id_category">Danh mục</span>
            <select class="form-select">
                {{#each catalogues}}
                <option value="{{id_category}}">{{category}}</option>
                {{/each}}
            </select>
        </div>
        <div class="d-flex mb-2">
            <a id="update-edit-movie" class="btn btn-primary btn-edit-movie me-2">Cập nhật</a>
            <a id="delete-edit-movie" class="btn btn-primary btn-edit-movie me-2">Xóa sản phẩm</a>
            <a id="add-movie" class="btn btn-primary me-2 d-none">Thêm sản phẩm</a>
            <a id="cancel-edit-movie" class="btn btn-primary">Thoát</a>
        </div>
    </div>
    <div id="movie-container" class="list-group list-group-container mb-3">
    </div>
    <nav id="movie-pagination" aria-label="Page Navigation">
        <ul class="pagination">
            <li class="page-item page-arrows">
                <a id="page-movie-prev" class="page-link disabled" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>
            {{#each pages_m}}
                <li class="page_item">
                    <a id="page-movie-{{this}}" class="page-link page-link-num page-movie {{#if @first}} active {{/if}}">{{this}}</a>
                </li>
            {{/each}}
            <li class="page-item page-arrows">
                <a id="page-movie-next" class="page-link" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        </ul>
    </nav>
</div>