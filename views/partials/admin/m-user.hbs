{{> js/admin/crud-user}}
<div id="screen-user" class="d-none container border screen-info py-1">
    <div class="d-flex align-items-center justify-content-between mt-1">
        <h4 class="m-0" style="align-self:flex-start">Users</h4>
    </div>
    <hr class="mt-3">
    <div id="edit-user" class="container d-none">
        <div class="input-group mb-3">
            <span class="input-group-text" style="width:15%" id="user-username">Username</span>
            <input type="text" class="form-control" placeholder="Username" aria-label="Username" aria-describedby="user-username" readonly>
        </div>
        <div class="input-group mb-3">
            <span class="input-group-text" style="width:15%" id="user-email">Email</span>
            <input type="text" class="form-control" placeholder="Email" aria-label="Email" aria-describedby="user-email" readonly>
        </div>
        <div class="input-group mb-3">
            <span class="input-group-text" style="width:15%" id="user-dob">Date of Birth</span>
            <input type="date" class="form-control" placeholder="DOB" aria-label="DOB" aria-describedby="user-dob" readonly>
        </div>
        <div class="input-group mb-3">
            <span class="input-group-text" style="width:15%" id="user-role">Role</span>
            <input type="text" class="form-control" placeholder="Role" aria-label="Role" aria-describedby="user-role" readonly>
        </div>
        <div class="d-flex mb-2">
            <a id="update-edit-user" class="btn btn-danger btn-edit-user me-2">Make Admin</a>
            <a id="delete-edit-user" class="btn btn-danger btn-edit-user me-2">Delete Account</a>
            <a id="cancel-edit-user" class="btn btn-danger">Return</a>
        </div>
    </div>
    <div id="user-container" class="list-group list-group-container mb-3">
    </div>
    <nav id="user-pagination" aria-label="Page Navigation">
        <ul class="pagination">
            <li class="page-item page-arrows">
                <a id="page-user-prev" class="page-link disabled" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>
            {{#each pages_u}}
                <li class="page_item">
                    <a id="page-user-{{this}}" class="page-link page-link-num page-user {{#if @first}} active {{/if}}">{{this}}</a>
                </li>
            {{/each}}
            <li class="page-item page-arrows">
                <a id="page-user-next" class="page-link" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        </ul>
    </nav>
</div>