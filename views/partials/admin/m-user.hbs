{{> js/admin/crud-user}}
<div id="screen-user" class="d-none container border screen-info py-1">
    <div class="d-flex align-items-center justify-content-between mt-1">
        <h4 class="m-0" style="align-self:flex-start">Users</h4>
    </div>
    <hr class="mt-3">
    <div id="edit-user" class="container d-none">
        <div class="input-group mb-3">
            <span class="input-group-text" style="width:15%" id="user-name">Tên sản phẩm</span>
            <input type="text" class="form-control" placeholder="Name" aria-label="Name" aria-describedby="user-name">
        </div>
        <div class="input-group mb-3">
            <span class="input-group-text" style="width:15%" id="user-create_date">Ngày sản xuất</span>
            <input type="date" class="form-control" placeholder="Creation Date" aria-label="Creation Date" aria-describedby="user-create_date">
        </div>
        <div class="input-group mb-3">
            <span class="input-group-text" style="width:15%" id="user-brand">Nhãn hiệu</span>
            <input type="text" class="form-control" placeholder="Brand" aria-label="Brand" aria-describedby="user-brand">
        </div>
        <div class="input-group mb-3">
            <span class="input-group-text" style="width:15%" id="user-color">Màu sắc</span>
            <input type="text" class="form-control" placeholder="Color" aria-label="Color" aria-describedby="user-color">
        </div>
        <div class="input-group mb-3">
            <span class="input-group-text" style="width:15%" id="user-images">Hình ảnh</span>
            <input type="text" class="form-control" placeholder="Images" aria-label="Images" aria-describedby="user-images">
        </div>
        <input type='file' id='user-upload' multiple='multiple' accept='image/*' name='upload-userduct' />
        <div class="input-group mb-3">
            <span class="input-group-text" style="width:15%" id="user-price">Giá tiền</span>
            <input type="number" class="form-control" placeholder="Price" aria-label="Price" aria-describedby="user-price" style="text-align:left">
        </div>
        <div class="input-group mb-3">
            <span class="input-group-text" style="width:15%" id="user-description">Miêu tả</span>
            <textarea type="text" class="form-control" placeholder="Description" aria-label="Description" aria-describedby="user-description" style="height:200px"></textarea>
        </div>
        <div class="input-group mb-3">
            <span class="input-group-text" style="width:15%" id="user-sale">Giảm giá</span>
            <input type="text" class="form-control" placeholder="Sale" aria-label="Sale" aria-describedby="user-sale">
        </div>
        <div class="input-group mb-3">
            <span class="input-group-text" style="width:15%" id="user-for">Dành cho</span>
            <select class="form-select">
                <option value="Nam">Nam</option>
                <option value="Nữ">Nữ</option>
            </select>
        </div>
        <div class="input-group mb-3">
            <span class="input-group-text" style="width:15%" id="user-id_category">Danh mục</span>
            <select class="form-select">
                {{#each catalogues}}
                <option value="{{id_category}}">{{category}}</option>
                {{/each}}
            </select>
        </div>
        <div class="d-flex mb-2">
            <a id="update-edit-user" class="btn btn-primary btn-edit-user me-2">Cập nhật</a>
            <a id="delete-edit-user" class="btn btn-primary btn-edit-user me-2">Xóa sản phẩm</a>
            <a id="add-user" class="btn btn-primary me-2 d-none">Thêm sản phẩm</a>
            <a id="cancel-edit-user" class="btn btn-primary">Thoát</a>
        </div>
    </div>
    <div id="user-container" class="list-group list-group-container mb-3">
    </div>
    <nav id="user-pagination" aria-label="Page Navigation">
        <ul class="pagination">
            <li class="page-item page-arrows">
                <a id="page-user-prev" class="page-link disabled" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>
            {{#each pages_p}}
                <li class="page_item">
                    <a id="page-user-{{this}}" class="page-link page-link-num page-user {{#if @first}} active {{/if}}">{{this}}</a>
                </li>
            {{/each}}
            <li class="page-item page-arrows">
                <a id="page-user-next" class="page-link" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        </ul>
    </nav>
</div>