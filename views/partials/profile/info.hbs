{{> js/profile/info}}
<div id="screen-info" class="d-none container border screen-info py-1">
    <div class="d-flex align-items-center justify-content-between mt-1">
        <h4 class="m-0" style="align-self:flex-start">Info</h4>
    </div>
    <hr class="mt-3">
    <div class="container m-0">
        <div class="input-group mb-3">
            <span class="input-group-text" style="width:15%" id="user-username">Username</span>
            <input type="text" class="form-control" placeholder="Username" value="{{data.username}}" aria-label="Username" aria-describedby="user-username" readonly>
        </div>
        <div class="input-group mb-3">
            <span class="input-group-text" style="width:15%" id="user-email">Email</span>
            <input type="text" class="form-control" placeholder="Email" value="{{data.email}}" aria-label="Email" aria-describedby="user-email" readonly>
        </div>
        <div class="input-group mb-3">
            <span class="input-group-text" style="width:15%" id="user-dob">Date of Birth</span>
            <input type="date" class="form-control" placeholder="DOB" aria-label="DOB" aria-describedby="user-dob" readonly>
        </div>
        {{!-- <div class="d-flex mb-2">
            <a id="update-user" class="btn btn-danger btn-edit-user me-2">Update</a>
        </div> --}}
    </div>
</div>